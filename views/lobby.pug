br
#playersInRegion
#gameStart
  form#gameform(method='POST' action='/game')
    label(for='nickname') nickname 
    input#nickname(type='text' name='nickname' maxlength='10')
    a(href="../help.html" target="_blank") how to play
    br
    br
    input#cp1(type='checkbox' name='cp1' checked='' disabled='')
    label(for='cp1') use default card pack
    br
    br
    div#regionselect
      label(for='region') region&nbsp;
      select#region(name='region')
        option(value='olympia') olympia
        option(value='corinth') corinth
        option(value='athens') athens
      input#lobbyJoinButton(type='button' value='join queue')
      input#lobbyLeaveButton(type='button' value='leave queue')
      p#queueNotes &nbsp;
  div#regiondisplay
    p#regionlabel
    div#lobbiersinregion
